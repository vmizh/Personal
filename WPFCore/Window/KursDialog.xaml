<dx:ThemedWindow
    x:Class="Personal.WPFClient.Helper.Window.KursDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    dx:ThemeManager.ThemeName="Win11Light"
    Title="" Height="200" Width="480"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    ResizeMode="NoResize"
    BorderBrush="{Binding BorderBrush}"
    Topmost="True"
    Loaded="ThemedWindow_Loaded"
    Padding="0,0,0,0"
    Background="Transparent"
    AllowsTransparency="True"
    BorderThickness="0">
    <Border CornerRadius="5">
        <DockPanel>
            <TextBox DockPanel.Dock="Top"
                     Text="{Binding TitleText}"
                     Focusable="False"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     TextAlignment="Left"
                     BorderThickness="0"
                     FontSize="18"
                     FontWeight="Bold"
                     VerticalContentAlignment="Bottom"
                     Background="White"
                     Padding="25,0,0,0"
                     Foreground="{Binding  TitleTextColor}" />

            <StackPanel DockPanel.Dock="Bottom"
                        Background="#F3F3F3F3" Margin="0,0,0,0" Focusable="False">
                <WrapPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Focusable="False"
                    Margin="27">
                    <ItemsControl
                        IsTabStop="False"
                        ItemsSource="{Binding Path=Buttons,NotifyOnSourceUpdated=True}"
                        MinHeight="30">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Focusable="False" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </WrapPanel>
            </StackPanel>
            <dxe:TextEdit
                DockPanel.Dock="Top"
                Padding="25,10,5,5"
                EditValue="{Binding Text,NotifyOnSourceUpdated=True}"
                IsReadOnly="True"
                Focusable="True"
                TextWrapping="Wrap"
                BorderThickness="0"
                Background="White"
                FontSize="14" />
        </DockPanel>
    </Border>
</dx:ThemedWindow>
